#!/bin/bash
# 
# Mystery Music Engine CLI Wrapper
# 
# This script provides easy access to the MME CLI from anywhere in the system
# by automatically activating the virtual environment and running the CLI.

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Path to the virtual environment and CLI script
VENV_PATH="$SCRIPT_DIR/.venv"
CLI_SCRIPT="$SCRIPT_DIR/mme-cli.py"

# Check if virtual environment exists
if [ ! -d "$VENV_PATH" ]; then
    echo "Error: Virtual environment not found at $VENV_PATH"
    echo "Please run 'make setup' in the rpi-engine directory first."
    exit 1
fi

# Check if CLI script exists
if [ ! -f "$CLI_SCRIPT" ]; then
    echo "Error: CLI script not found at $CLI_SCRIPT"
    exit 1
fi

# Activate virtual environment and run CLI with all arguments
source "$VENV_PATH/bin/activate"
python "$CLI_SCRIPT" "$@"
